{
  "name": "timeline-site",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "dev:fetch": "npm run generate && astro dev",
    "prebuild": "npm run generate",
    "build": "astro build",
    "build:only": "astro build && npx pagefind --site dist",
    "postbuild": "npx pagefind --site dist",
    "preview": "astro preview",
    "fetch:readwise": "node --experimental-strip-types scripts/fetch-readwise-reader.mts",
    "fetch:blog": "node --experimental-strip-types scripts/fetch-blog.mts",
    "fetch:bluesky": "node --experimental-strip-types scripts/fetch-bluesky.mts",
    "fetch:github": "node --experimental-strip-types scripts/fetch-github-releases.mts",
    "fetch:wikipedia": "node --experimental-strip-types scripts/fetch-wikipedia.mts",
    "fetch:linkedin": "node --experimental-strip-types scripts/fetch-linkedin-selenium.mts",
    "fetch:linkedin-api": "node --experimental-strip-types scripts/fetch-linkedin-api.mts",
    "linkedin:auth": "node --experimental-strip-types scripts/linkedin-auth-helper.mts",
    "fetch:linkedin-export": "node --experimental-strip-types scripts/fetch-linkedin-export.mts",
    "linkedin:cookies": "node --experimental-strip-types scripts/linkedin-cookie-manager.mts",
    "merge": "node --experimental-strip-types scripts/merge-sources.mts",
    "generate": "npm run fetch:readwise && npm run fetch:blog && npm run fetch:bluesky && npm run fetch:github && npm run fetch:wikipedia && npm run merge"
  },
  "dependencies": {
    "@astrojs/rss": "^4.0.12",
    "@types/selenium-webdriver": "^4.35.1",
    "astro": "^4.14.0",
    "gray-matter": "^4.0.3",
    "marked": "^12.0.2",
    "rss-parser": "^3.13.0",
    "selenium-webdriver": "^4.37.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "pagefind": "^1.4.0",
    "typescript": "^5.6.2"
  }
}
