---
import { ViewTransitions } from 'astro:transitions';
import timeline from "../../data/timeline.json";
import { config } from "../../config";

export function getStaticPaths() {
  const primers = (timeline as any[]).filter(item => item.type === 'primer');
  return primers.map(primer => ({
    params: { id: primer.id.replace('readwise:', '') },
    props: { primer }
  }));
}

const { primer } = Astro.props;

// Helper function to check if comments should be disabled
function shouldDisableComments(item: any): boolean {
  const hashtags = item.hashtags || [];
  const hasNoCommentsTag = hashtags.some((tag: string) => 
    tag.toLowerCase() === '#nocomments' || tag.toLowerCase() === '#nc'
  );
  
  const tags = item.tags || [];
  const hasNoCommentsInTags = tags.some((tag: string) => {
    const normalized = tag.toLowerCase().replace(/\s+/g, '_');
    return normalized === 'nocomments' || normalized === 'nc';
  });
  
  return hasNoCommentsTag || hasNoCommentsInTags;
}
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{primer.title} ‚Äî timeline.523.life</title>
  <meta name="description" content={primer.summary || primer.title}>
  <link rel="canonical" href={`https://timeline.523.life/primer/${primer.id.replace('readwise:', '')}`}>
  <ViewTransitions />
</head>
<body>

<main>
  <header class="header">
    <nav class="header-nav">
      <a href="/" class="back-link">‚Üê Go to timeline</a>
      <span class="about-header">This is content from <a href="https://523.life">Chase Pettet</a> and part of my public timeline</span>
    </nav>
    <div class="meta">
      <span class="type">AI Topic Primer</span> ¬∑ <time datetime={primer.timestamp}>{new Date(primer.timestamp).toLocaleDateString()}</time>
      {primer.metadata?.site_name && (
        <> ¬∑ üì∞ {primer.metadata.site_name}</>
      )}
      {primer.author && (
        <> ¬∑ ‚úçÔ∏è {primer.author}</>
      )}
      {primer.metadata?.word_count && (
        <> ¬∑ üïê {Math.ceil(primer.metadata.word_count / 200)} min read</>
      )}
    </div>
    <h1>{primer.title}</h1>
  </header>

  {primer.summary && (
    <div class="summary">
      <p>{primer.summary}</p>
    </div>
  )}

  <hr class="content-divider">

  <article class="content" set:html={primer.content_html || '<p>Full content not available.</p>'} />

  {!(config.commentsEnabled === false || shouldDisableComments(primer)) && (
    <div class="comments-section" id="comments-section">
      <div class="giscus" id="giscus-container"></div>
    </div>
  )}

  <footer class="post-footer">
    <a href="/" class="back-link">‚Üê Go to timeline</a>
  </footer>
</main>

{!(config.commentsEnabled === false || shouldDisableComments(primer)) && (
  <>
    <script src="https://giscus.app/client.js"
            data-repo="chasemp/timeline"
            data-repo-id="R_kgDOQDOMbA"
            data-category="Ideas"
            data-category-id="DIC_kwDOQDOMbM4CxLZb"
            data-mapping="pathname"
            data-strict="0"
            data-reactions-enabled="1"
            data-emit-metadata="0"
            data-input-position="bottom"
            data-theme="/giscus-custom.css"
            data-lang="en"
            crossorigin="anonymous"
            async>
    </script>

    <script>
      window.addEventListener('load', () => {
        const container = document.getElementById('giscus-container');
        const commentsSection = document.getElementById('comments-section');
        
        setTimeout(() => {
          if (container && commentsSection) {
            const hasContent = container.innerHTML.trim() !== '';
            if (!hasContent) {
              commentsSection.style.display = 'none';
            }
          }
        }, 10000);
      });
    </script>
  </>
)}

