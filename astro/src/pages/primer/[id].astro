export function getStaticPaths() {
  const primers = (timeline as any[]).filter(item => item.type === 'primer');
  return primers.map(primer => ({
    params: { id: primer.id.replace('readwise:', '') },
    props: { primer }
  }));
}

const { primer } = Astro.props;

// Helper function to check if comments should be disabled
function shouldDisableComments(item: any): boolean {
  const hashtags = item.hashtags || [];
  const hasNoCommentsTag = hashtags.some((tag: string) => 
    tag.toLowerCase() === '#nocomments' || tag.toLowerCase() === '#nc'
  );
  
  const tags = item.tags || [];
  const hasNoCommentsInTags = tags.some((tag: string) => {
    const normalized = tag.toLowerCase().replace(/\s+/g, '_');
    return normalized === 'nocomments' || normalized === 'nc';
  });
  
  return hasNoCommentsTag || hasNoCommentsInTags;
}

// Extract headings from content_html for TOC
interface TocEntry {
  level: number;
  text: string;
  id: string;
  originalMatch: string;
}

function extractToc(html: string): TocEntry[] {
  const toc: TocEntry[] = [];
  // Match h1, h2, h3 tags - handle nested tags like <h1><b>Text</b></h1> with newlines
  const headingRegex = /<h([1-3])([^>]*)>([\s\S]*?)<\/h\1>/gi;
  let match;
  
  while ((match = headingRegex.exec(html)) !== null) {
    const level = parseInt(match[1]);
    const fullMatch = match[0];
    // Extract text content, stripping any nested tags
    let text = match[3]
      .replace(/<[^>]+>/g, '') // Remove HTML tags
      .replace(/\s+/g, ' ')    // Normalize whitespace
      .trim();
    
    // Only include headings that look like chapters or sections
    if (text && (text.includes('Chapter') || text.includes('Section') || level <= 2)) {
      // Create a URL-friendly ID
      const id = text
        .toLowerCase()
        .replace(/[^a-z0-9\s-]/g, '')
        .replace(/\s+/g, '-')
        .substring(0, 60);
      
      if (id) {
        toc.push({ level, text, id, originalMatch: fullMatch });
      }
    }
  }
  
  return toc;
}

// Add IDs to headings in the content HTML
function addHeadingIds(html: string, toc: TocEntry[]): string {
  let result = html;
  
  for (const entry of toc) {
    // Replace the original match with an enhanced version
    const escapedMatch = entry.originalMatch.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
    const regex = new RegExp(escapedMatch.replace(/\s+/g, '\\s*'), 'i');
    
    result = result.replace(regex, (match) => {
      // Extract the opening tag
      const openTagMatch = match.match(/<h([1-3])([^>]*)>/i);
      if (!openTagMatch) return match;
      
      const level = openTagMatch[1];
      const attrs = openTagMatch[2];
      
      // Check if it already has an id
      if (attrs.includes('id=')) {
        return match;
      }
      
      // Get the inner content (everything between opening and closing tags)
      const innerContent = match.replace(/<h[1-3][^>]*>/i, '').replace(/<\/h[1-3]>/i, '');
      
      return `<h${level}${attrs} id="${entry.id}" class="section-heading">
        <a href="#${entry.id}" class="heading-anchor" title="Link to this section">#</a>
        ${innerContent}
        <button class="copy-link-btn" data-link="#${entry.id}" title="Copy link to section">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
            <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
          </svg>
        </button>
      </h${level}>`;
    });
  }
  
  return result;
}

const rawContent = primer.content_html || '<p>Full content not available.</p>';
const toc = extractToc(rawContent);
const processedContent = addHeadingIds(rawContent, toc);
