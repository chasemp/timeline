---
import { ViewTransitions } from 'astro:transitions';
import timeline from "../../data/timeline.json";
import { config } from "../../config";

export function getStaticPaths() {
  const blogPosts = (timeline as any[]).filter(item => item.type === 'blog');
  return blogPosts.map(post => ({
    params: { slug: post.id.replace('blog:', '') },
    props: { post }
  }));
}

const { post } = Astro.props;

// Helper function to check if comments should be disabled for this post
function shouldDisableComments(post: any): boolean {
  const hashtags = post.hashtags || [];
  const hasNoCommentsTag = hashtags.some((tag: string) => 
    tag.toLowerCase() === '#nocomments' || tag.toLowerCase() === '#nc'
  );
  
  const tags = post.tags || [];
  const hasNoCommentsInTags = tags.some((tag: string) => {
    const normalized = tag.toLowerCase().replace(/\s+/g, '_');
    return normalized === 'nocomments' || normalized === 'nc';
  });
  
  return hasNoCommentsTag || hasNoCommentsInTags;
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{post.title} ‚Äî timeline.523.life</title>
  <meta name="description" content={post.summary || post.title}>
  <link rel="canonical" href={`https://timeline.523.life/blog/${post.id.replace('blog:', '')}`}>
  <ViewTransitions />
  <!-- Theme initialization script - runs before page renders to prevent flash -->
  <script is:inline>
    (function() {
      const stored = localStorage.getItem('theme');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      const theme = stored || (prefersDark ? 'dark' : 'light');
      document.documentElement.setAttribute('data-theme', theme);
    })();
  </script>
</head>
<body>

<main>
  <header class="header">
    <nav class="header-nav">
      <a href="/" class="back-link">‚Üê Go to timeline</a>
      <span class="about-header">This is content from <a href="https://523.life">Chase Pettet</a> and part of my public timeline</span>
      <button class="theme-toggle" id="theme-toggle" aria-label="Toggle theme">
        <span class="sun-icon">‚òÄÔ∏è</span>
        <span class="moon-icon">üåô</span>
      </button>
    </nav>
    <div class="meta">
      <span class="type">{post.type}</span> ¬∑ <time datetime={post.timestamp}>{new Date(post.timestamp).toLocaleDateString()}</time>
      {post.metadata?.word_count && (
        <> ¬∑ üïê {Math.ceil(post.metadata.word_count / 200)} min read</>
      )}
    </div>
    <h1>{post.title}</h1>
  </header>

  {post.summary && (
    <div class="summary">
      <p>{post.summary}</p>
    </div>
  )}

  <article class="content" set:html={post.content_html} />

  {!(config.commentsEnabled === false || shouldDisableComments(post)) && (
    <div class="comments-section" id="comments-section">
      <div class="giscus" id="giscus-container"></div>
    </div>
  )}

  <footer class="post-footer">
    <a href="/" class="back-link">‚Üê Go to timeline</a>
    {post.canonical_url && !post.canonical_url.startsWith('/') && (
      <a href={post.canonical_url} target="_blank" rel="noopener">Original post ‚Üó</a>
    )}
  </footer>
</main>

<script>
  // Theme toggle functionality
  const toggle = document.getElementById('theme-toggle');
  
  function updateTheme(theme: string) {
    document.documentElement.setAttribute('data-theme', theme);
    localStorage.setItem('theme', theme);
  }
  
  toggle?.addEventListener('click', () => {
    const current = document.documentElement.getAttribute('data-theme') || 'dark';
    updateTheme(current === 'dark' ? 'light' : 'dark');
  });
</script>

{!(config.commentsEnabled === false || shouldDisableComments(post)) && (
  <>
    <script src="https://giscus.app/client.js"
            data-repo="chasemp/timeline"
            data-repo-id="R_kgDOQDOMbA"
            data-category="Ideas"
            data-category-id="DIC_kwDOQDOMbM4CxLZb"
            data-mapping="pathname"
            data-strict="0"
            data-reactions-enabled="1"
            data-emit-metadata="0"
            data-input-position="bottom"
            data-theme="/giscus-custom.css"
            data-lang="en"
            crossorigin="anonymous"
            async>
    </script>

    <script>
      window.addEventListener('load', () => {
        const container = document.getElementById('giscus-container');
        const commentsSection = document.getElementById('comments-section');
        
        setTimeout(() => {
          if (container && commentsSection) {
            const hasContent = container.innerHTML.trim() !== '';
            if (!hasContent) {
              commentsSection.style.display = 'none';
            }
          }
        }, 10000);
      });
    </script>
  </>
)}

<style>
  :root[data-theme="dark"], :root:not([data-theme]) {
    --bg: #2a2419;
    --panel: #342d23;
    --text: #e8dcc4;
    --muted: #a89a84;
    --accent: #d4956f;
    --border: #4a3f32;
    --card-bg: #3d3528;
  }
  
  :root[data-theme="light"] {
    --bg: #fdfbf7;
    --panel: #f5f1e8;
    --text: #3d3527;
    --muted: #7a6f5f;
    --accent: #c17a4f;
    --border: #e0d8c8;
    --card-bg: #ffffff;
  }
  
  * { box-sizing: border-box; }
  
  html, body { 
    margin: 0; 
    padding: 0; 
    background: var(--bg); 
    color: var(--text); 
    font: 16px/1.7 Georgia, "Times New Roman", serif;
    transition: background-color 0.3s ease, color 0.3s ease;
  }
  
  main { 
    max-width: 720px; 
    margin: 0 auto; 
    padding: 24px; 
  }
  
  .header { 
    margin-bottom: 40px; 
  }
  
  .header-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 16px;
    margin-bottom: 24px;
  }
  
  .back-link { 
    color: var(--accent); 
    text-decoration: none; 
    font-size: 14px;
    font-family: system-ui, sans-serif;
  }
  
  .back-link:hover { 
    text-decoration: underline; 
  }
  
  .about-header {
    font-size: 13px;
    color: var(--muted);
    font-family: system-ui, sans-serif;
    flex: 1;
    text-align: center;
  }
  
  .about-header a {
    color: var(--accent);
    text-decoration: none;
    font-weight: 600;
  }
  
  .about-header a:hover {
    text-decoration: underline;
  }
  
  .theme-toggle {
    background: var(--panel);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 6px 10px;
    cursor: pointer;
    font-size: 16px;
    transition: all 0.2s;
  }
  
  .theme-toggle:hover {
    background: var(--card-bg);
    border-color: var(--accent);
  }
  
  :root[data-theme="dark"] .sun-icon,
  :root:not([data-theme]) .sun-icon {
    display: none;
  }
  
  :root[data-theme="light"] .moon-icon {
    display: none;
  }
  
  .meta { 
    font-size: 14px; 
    color: var(--muted); 
    margin: 16px 0 8px;
    font-family: system-ui, sans-serif;
  }
  
  .type { 
    text-transform: uppercase; 
    letter-spacing: 0.06em; 
    font-size: 12px;
    color: var(--accent);
    font-weight: 600;
  }
  
  h1 { 
    margin: 16px 0 24px; 
    font-size: 32px; 
    line-height: 1.2;
    color: var(--accent);
  }
  
  .summary {
    margin: 24px 0 32px;
    padding: 20px;
    background: var(--panel);
    border-left: 3px solid var(--accent);
    border-radius: 4px;
  }
  
  .summary p {
    margin: 0;
    color: var(--text);
    font-style: italic;
    line-height: 1.7;
  }
  
  .content { 
    margin: 32px 0; 
  }
  
  .content img { 
    max-width: 100%;
    max-height: 600px;
    width: auto;
    height: auto;
    display: block;
    margin: 24px auto;
    object-fit: contain;
    border-radius: 8px;
    border: 1px solid var(--border);
  }
  
  .content p { 
    margin: 16px 0; 
  }
  
  .content pre { 
    background: var(--panel); 
    padding: 16px; 
    border-radius: 8px; 
    overflow-x: auto;
    border: 1px solid var(--border);
  }
  
  .content code { 
    font-family: 'Monaco', 'Courier New', monospace; 
    font-size: 14px; 
  }
  
  /* Force all links to use accent color */
  a, a:link, a:visited, a:hover, a:active,
  .content a, .content a:link, .content a:visited, .content a:hover, .content a:active {
    color: var(--accent) !important;
    text-decoration-color: rgba(212, 149, 111, 0.3);
  }
  
  a:hover, .content a:hover {
    text-decoration: underline;
  }
  
  .content h1, .content h2, .content h3, .content h4, .content h5, .content h6 {
    color: var(--text);
    margin-top: 32px;
    margin-bottom: 16px;
  }
  
  .content ul, .content ol {
    margin: 16px 0;
    padding-left: 24px;
  }
  
  .content li {
    margin: 8px 0;
  }
  
  .content blockquote {
    border-left: 3px solid var(--accent);
    margin: 24px 0;
    padding: 12px 20px;
    background: var(--panel);
    border-radius: 0 4px 4px 0;
  }
  
  .content blockquote p {
    margin: 0;
    font-style: italic;
  }
  
  /* Table styling */
  .content table {
    width: 100%;
    border-collapse: collapse;
    margin: 24px 0;
    font-size: 14px;
    background: var(--card-bg);
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid var(--border);
  }
  
  .content thead {
    background: var(--panel);
  }
  
  .content th {
    padding: 12px 16px;
    text-align: left;
    font-weight: 600;
    color: var(--accent);
    border-bottom: 2px solid var(--border);
    font-family: system-ui, sans-serif;
    font-size: 13px;
  }
  
  .content td {
    padding: 12px 16px;
    border-bottom: 1px solid var(--border);
    vertical-align: top;
  }
  
  .content tr:last-child td {
    border-bottom: none;
  }
  
  .content tbody tr:nth-child(even) {
    background: rgba(255, 255, 255, 0.03);
  }
  
  :root[data-theme="light"] .content tbody tr:nth-child(even) {
    background: rgba(0, 0, 0, 0.02);
  }
  
  .post-footer { 
    margin-top: 48px; 
    padding-top: 24px; 
    border-top: 1px solid var(--border); 
    display: flex; 
    justify-content: space-between; 
    flex-wrap: wrap; 
    gap: 16px; 
  }
  
  .comments-section {
    margin-top: 48px;
    padding-top: 24px;
    border-top: 1px solid var(--border);
  }
  
  .giscus {
    margin-top: 16px;
    position: relative;
  }
  
  .giscus iframe {
    min-height: 300px;
  }
  
  @media (max-width: 640px) {
    h1 { 
      font-size: 24px; 
    }
    
    main { 
      padding: 16px; 
    }
    
    .header-nav {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }
    
    .about-header {
      text-align: left;
    }
  }
</style>

</body>
</html>
